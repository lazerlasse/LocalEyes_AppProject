<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalEyesTipApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LocalEyesTipApp.Pages"
    Shell.FlyoutBehavior="Flyout" >

    <ShellContent
        Title="Senest Nyt"
        ContentTemplate="{DataTemplate pages:LatestNewsPage}"
        Route="LatestNewsPage" 
        Icon="square_rss_solid.svg"/>

    <FlyoutItem Icon="envelope_solid.svg" Title="Send Tip">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:SendTipPage}" />
        </Tab>
    </FlyoutItem>

    <FlyoutItem Icon="circle_info_solid.svg" Title="Om Appen">
        <Tab>
            <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}" />
        </Tab>
    </FlyoutItem>
    
</Shell>
