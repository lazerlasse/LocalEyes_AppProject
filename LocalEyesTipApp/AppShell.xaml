<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LocalEyesTipApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:LocalEyesTipApp.Pages"
    Shell.FlyoutBehavior="Flyout" >

    <!-- Buttom Tab Menu -->
    <TabBar>
        <Tab Title="Seneste Nyt"
             Icon="square_rss_solid">
            <ShellContent ContentTemplate="{DataTemplate pages:LatestNewsPage}"
                          Route="LatestNewsPage"/>
        </Tab>
        <Tab Title="Tip os"
             Icon="comment_dots_solid">
            <ShellContent ContentTemplate="{DataTemplate pages:SendTipPage}"
                          Route="SendTipPage"/>
        </Tab>
        <Tab Title="112 Puls"
             Icon="fire_solid">
            <ShellContent ContentTemplate="{DataTemplate pages:FireCallsFrom112Page}"
                          Route="FireCallsFrom112Page"/>
        </Tab>
        <Tab Title="Om Appen"
             Icon="circle_info_solid">
            <ShellContent ContentTemplate="{DataTemplate pages:AboutPage}"
                          Route="AboutPage"/>
        </Tab>
        <Tab Title="Indstillinger"
             Icon="gear_solid">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}"
                          Route="SettingsPage"/>
        </Tab>
    </TabBar>
</Shell>
