<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="LocalEyesTipApp.Pages.FireCallsFrom112Page"
             xmlns:local="clr-namespace:LocalEyesTipApp.Pages"
             x:DataType="local:FireCallsFrom112Page"
             Title="112 Puls">

    <Grid
        ColumnDefinitions="*"
        RowDefinitions="*">
        
        <RefreshView
            Command="{Binding Path=RefreshCommand}"
            IsRefreshing="{Binding Path=IsRefreshing}">

            <WebView
                x:Name="FireCallsFrom112WebView"
                Grid.Column="0"
                Grid.Row="0"
                VerticalOptions="FillAndExpand"
                HorizontalOptions="Fill"
                MinimumHeightRequest="200"
                MinimumWidthRequest="100"/>
        </RefreshView>
        
    </Grid>
</ContentPage>